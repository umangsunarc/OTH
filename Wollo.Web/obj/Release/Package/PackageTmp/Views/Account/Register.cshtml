<body class="signup-page login-page">
    <div id="wrpe-page">
        <nav class="wrpe-nav-style-1" role="navigation" data-offcanvass-position="wrpe-offcanvass-left">
            <div class="container">
                <div class="col-lg-6 col-md-5 col-sm-5 wrpe-link-wrap">
                    <ul data-offcanvass="yes">
                        @*<li><a href="index.html">Home</a></li>*@
                        <li style="font-weight:bold;"><a href="/Home">@Html.DisplayNameFor(model => model.home)</a></li>
                        @*<li>@Html.ActionLink(, "Index", "Home", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>*@
                        <li><a href="/Home/About">@Html.LabelFor(model => model.about_us)</a></li>
                        @*<li><a href="#">Blog</a></li>*@
                        <li><a href="/Home/Contact">@Html.LabelFor(model => model.contact_us)</a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" id="languagemenudesign" data-toggle="dropdown">Language <b class="caret"></b></a>
                            <ul class="dropdown-menu alert-dropdown" id="ddmenualert" style="background-color: #0B7CF7; ">
                                @{
                                    CultureInfo currentCulture = Thread.CurrentThread.CurrentCulture;
                                    <li><a href="/Home/ChangeCurrentCulture/0">English</a></li>
                                    @*<li><a href="/Home/ChangeCurrentCulture/1">Traditional Chinese</a></li>*@
                                    <li><a href="/Home/ChangeCurrentCulture/2">Simplified Chinese</a></li>
                                }
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 wrpe-logo">
                    <a href="#" class="js-wrpe-mobile-toggle wrpe-nav-toggle"><i></i></a>
                    <a href="/Home"><img src="/images/Final_Points_Exchange_Logo.png" style="height:120px;width:120px;margin-top:-33px;" /></a>
                </div>
                <div class="col-lg-3 col-md-4 col-sm-4 text-right wrpe-link-wrap">
                    <ul class="wrpe-special" data-offcanvass="yes">
                        <li><a href="/Account/Login" class="call-to-action">@Html.DisplayNameFor(model => model.login)</a></li>
                        @*<li>@Html.ActionLink("Login", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>*@
                        <li><a href="/Account/Register" class="call-to-action">@Html.DisplayNameFor(model => model.register)</a></li>
                        @*<li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "call-to-action" })</li>*@
                    </ul>
                </div>
            </div>
        </nav>


        <div class="wrpe-cover wrpe-cover-style-2 js-full-height" data-stellar-background-ratio="0.5" data-next="yes">
            <div class="wrpe-overlay"></div>
            <div class="wrpe-cover-text">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12  col-xs-12 full-height js-full-height">
                            <div class="col-md-6 col-md-offset-3 form-gg">
                                <div class="modal-title"><h2>@Html.DisplayNameFor(model => model.signup)</h2></div>
                                @if (TempData["Success"] != null)
                                {
                                    <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
                                }
                                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <span class="help-block">
                                        @Html.ValidationSummary(true)
                                    </span>
                                    <hr />
                                    @*<fieldset class="form-group">
                                            @Html.DropDownListFor(m => m.OrganizationId, (IEnumerable<SelectListItem>)ViewBag.lstOrganization, "-- Select Organization --", new { @class = "form-control" })
                                            <a href="/Account/RegisterOrganization">Click here to add your organization</a>
                                        </fieldset>*@
                                    <fieldset class="form-group">
                                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = @Html.DisplayNameFor(model=>model.UserName) })
                                        @Html.ValidationMessageFor(m => m.UserName)
                                    </fieldset>
                                    <fieldset class="form-group">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = @Html.DisplayNameFor(model => model.Email) })
                                        @Html.ValidationMessageFor(m => m.Email)
                                    </fieldset>
                                    <fieldset class="form-group">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = @Html.DisplayNameFor(model => model.Password) })
                                        @Html.ValidationMessageFor(m => m.Password)
                                    </fieldset>
                                    <fieldset class="form-group">
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = @Html.DisplayNameFor(model => model.ConfirmPassword) })
                                        @Html.ValidationMessageFor(m => m.ConfirmPassword)
                                    </fieldset>
                                    <fieldset class="form-group">
                                        <p>
                                         <input type="checkbox" />   By clicking the button to Sign Up, I agree to the<a href="/Home/UserAgreement" target="_blank"> User Agreement.</a></p>
                                        <input type="submit" class="btn btn-primary btn-outline btn-lg" value=@Html.DisplayNameFor(model=>model.signup) />
                                        <input type="reset" class="btn btn-primary btn-outline btn-lg" value=@Html.DisplayNameFor(model=>model.reset) />
                                    </fieldset>
                                }
                                @*<form>

                                        <fieldset class="form-group">
                                            <input type="text" class="form-control" id="formGroupExampleInput" placeholder="First Name">
                                        </fieldset>
                                        <fieldset class="form-group">
                                            <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Last Name">
                                        </fieldset>

                                        <fieldset class="form-group">
                                            <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Email">
                                        </fieldset>

                                        <fieldset class="form-group">
                                            <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Password">
                                        </fieldset>
                                        <div class="radio">
                                            <label>
                                                <input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
                                                I'd Like to receive updates & notification
                                            </label>
                                        </div>
                                    </form>*@
                                @*<p>
                                        By clicking the button below to Sign Up, I agree to the User Agreement
                                    </p>
                                    <div><a href="#" class="btn btn-primary btn-outline btn-lg">Signup</a></div>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>



        <div class="wrpe-footer-style-3">
            <div class="container">
                <div class="row p-b kill-padding">
                    <div class="col-md-3 col-sm-6 wrpe-footer-widget wow fadeInUp" data-wow-duration="1s" data-wow-delay=".8s">
                        <h3>GET TO KNOW POINTS </h3>
                        <ul class="wrpe-links" style="display:none;">
                            <li><a href="#">Link 1</a></li>
