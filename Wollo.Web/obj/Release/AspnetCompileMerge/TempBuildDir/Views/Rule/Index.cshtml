@section scripts{
    <script>
        $("#nav-rule").addClass("active");

        $("#withdrawal-container").click(function () {
            $("#WithdrawPaymentMethod").val("");
            $("#FeeRuleWithdraw").val("");
            $("#FeeWithdraw").val("");
            $("#withdra").modal("show");
        });
        //script code  umang 18-7-16 //
        $("#trading-container").click(function () {
            $("#TradingPointEquivalent").val("");
            $("#TradingMinimumLot").val("");
            $("#TradingMinimumRate").val("");
            $("#trad_rule_lot_rate").modal("show");
        });

        $("#admin-container").click(function () {
            $("#AdminStock").val("");
            $("#FeeRuleBuyer").val("");
            $("#FeeRuleSeller").val("");
            $("#FeeBuyer").val("");
            $("#FeeSeller").val("");
            $("#administrator").modal("show");
        });

        $("#FeeWithdraw,#FeeBuyer,#FeeSeller").keydown(function (e) {
            // Allow: backspace, delete, tab, escape, enter
            if ($.inArray(e.keyCode, [46, 8, 9, 27, 13, 110]) !== -1 ||
                // Allow: Ctrl+A, Command+A
                (e.keyCode == 65 && (e.ctrlKey === true || e.metaKey === true)) ||
                // Allow: home, end, left, right, down, up
                (e.keyCode >= 35 && e.keyCode <= 40)) {
                // let it happen, don't do anything
                return;
            }
            // Ensure that it is a number and stop the keypress
            if ((e.shiftKey || (e.keyCode < 48 || e.keyCode > 57)) && (e.keyCode < 96 || e.keyCode > 105)) {
                e.preventDefault();
            }
        });

        $("#AddWithdrawalRule").click(function () {
            if ($("#WithdrawPaymentMethod").val().length > 0 && $("#FeeRuleWithdraw").val().length > 0 && $("#FeeWithdraw").val().length > 0) {
                $.ajax({
                    url: "@Url.Action("AddUpdateWithdrawalRule", "Rule")",
                    data: "{'method':'" + $("#WithdrawPaymentMethod").val() + "','fees':'" + $("#FeeWithdraw").val() + "','withdrawl_rule_id':'" + $("#FeeRuleWithdraw").val() + "'}",
                    contentType: "application/json",
                    method: "POST",
                    success: function (result) {
                        if (result == 1) {
                            alert("Rule created successfully.");
                            location.reload();
                        }
                        else {
                            alert("Something went wrong.");
                        }
                    },
                    error: function (e) {
                        alert("Rule created successfully.");
                    }
                });
            }
            else {
                alert("Make sure you have provided data for all fields.");
            }
        });

        $("#AddAdminRule").click(function () {
            if ($("#AdminStock").val().length > 0 && $("#FeeRuleBuyer").val().length > 0 && $("#FeeRuleSeller").val().length > 0 && $("#FeeBuyer").val().length > 0 && $("#FeeSeller").val().length > 0) {
                $.ajax({
                    url: "@Url.Action("AddUpdateAdminRule", "Rule")" + "?AdminStock=" + $("#AdminStock").val() + "&RuleBuyer=" + $("#FeeRuleBuyer").val() + "&RuleSeller=" + $("#FeeRuleSeller").val() + "&FeeBuyer=" + $("#FeeBuyer").val() + "&FeeSeller=" + $("#FeeSeller").val(),
                    method: "POST",
                    success: function (result) {
                        if (result == 1) {
                            alert("Rule created successfully.");
                            location.reload();
                        }
                        else {
                            alert("Something went wrong.");
                        }
                    },
                    error: function (e) {
                        alert("Rule created successfully.");
                    }
                });
            }
            else {
                alert("Make sure you have provided data for all fields.");
            }
        });

        //  ajax code for Trading rule umang 18-7-16 start//

        $("#AddTradingRule").click(function () {
            if ($("#TradingPointEquivalent").val().length > 0 && $("#TradingMinimumLot").val().length > 0 && $("#TradingMinimumRate").val().length > 0) {
                $.ajax({
                    url: "@Url.Action("AddUpdateTradingRule", "Rule")" + "?TradingPointEquivalent=" + $("#TradingPointEquivalent").val() + "&TradingMinimumLot=" + $("#TradingMinimumLot").val() + "&TradingMinimumRate=" + $("#TradingMinimumRate").val(),
                    method: "POST",
                    success: function (result) {
                    if (result == 1) {
                        alert("Rule created successfully.");
                        location.reload();
                    }
                    else {
                        alert("Something went wrong.");
                    }
                },
                error: function (e) {
                    alert("Rule created successfully.");
                }
            });
        }
        else {
                alert("Make sure you have provided data for all fields.");
        }
        });
        // end here //
    </script>
}