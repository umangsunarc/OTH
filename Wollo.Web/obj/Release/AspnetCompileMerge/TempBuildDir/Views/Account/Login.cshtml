                                            </fieldset>*@
                                        <fieldset class="form-group">
                                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "User Name" })
                                            @Html.ValidationMessageFor(m => m.UserName)
                                        </fieldset>
                                        @*<fieldset class="form-group">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "User Name" })
                                            @Html.ValidationMessageFor(m => m.Email)
                                        </fieldset>*@
                                        <fieldset class="form-group">
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                                            @Html.ValidationMessageFor(m => m.Password)
                                        </fieldset>
                                        <fieldset class="form-group">
                                            @Html.CheckBoxFor(m => m.RememberMe)
                                            @Html.LabelFor(m => m.RememberMe)
                                        </fieldset>
                                        <fieldset class="form-group">
                                            <div>
                                                <input type="submit" value="Log in" class="btn btn-primary" />
                                                <input type="reset" value="Reset" class="btn btn-default" />
                                                @*<div><a href="#" class="btn btn-primary btn-outline btn-lg">Login</a></div>
                                                    <div class="left"><p><a href="#">Forgot Password?</a></p></div>*@
                                            </div>
                                        </fieldset>
                                        <fieldset class="form-group">
                                            <div>
                                                <p>
                                                    @Html.ActionLink("Register", "Register") if you don't have an account.
                                                </p>
                                            </div>
                                        </fieldset>
                                        <fieldset class="form-group">
                                            <a href="#"><img src="~/images/wollo.png"></a>
                                            <a href="#"><img src="~/images/w-chinese.png"></a>
                                        </fieldset>
                                    }
                                </section>
                                @*<div class="radio">
                                        <label>
