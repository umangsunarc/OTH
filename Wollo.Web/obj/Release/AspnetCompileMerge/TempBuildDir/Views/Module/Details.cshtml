@model Wollo.Web.Models.ModuleViewModel

@{
    ViewBag.Title = "Module Details";
}
<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Module Details
                </h1>
                <ol class="breadcrumb">
                    <li class="active">
                        <i class="fa fa-dashboard"></i> Module Details
                    </li>
                </ol>
            </div>
        </div>
        <div class="container-fluid">

            <div class="col-lg-12 space">

                <div>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>

                    </dl>
                    <h3>Permissions</h3>
                    @for (int i = 0; i < Model.Permissions.Count; i++)
                    {
                        <div class="form-group">
                            @{string label = Model.Permissions[i].Name;}
                            @Html.Label("Name", label, new { @class = "control-label col-md-12" })
                        </div>
                    }
                </div>
                <p>
                    @Html.ActionLink("Back to Modules", "Index")
                </p>
            </div>
        </div>

        <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->
</div>