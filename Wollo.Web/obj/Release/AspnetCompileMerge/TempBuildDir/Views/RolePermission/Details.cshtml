@model Wollo.Web.Models.RolePermissionViewModel

@{
    ViewBag.Title = "Role Permission Details";
}

<h2>Role Permission Details</h2>


<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Role Permission Details
                </h1>
                <ol class="breadcrumb">
                    <li class="active">
                        <i class="fa fa-dashboard"></i> Role Permission Details
                    </li>
                </ol>
            </div>
        </div>
        <div class="container-fluid">

            <div class="col-lg-12 space">

                <div>
                    <hr />
                    @*<dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Role)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Role)
                        </dd>

                    </dl>*@
                    <h3>Permissions - @Html.DisplayFor(model => model.Role)</h3>
                    <table class="table table-striped table-responsive table-bordered">
                        <tr>
                            <th>
                                @Html.DisplayName("Module")
                            </th>
                            @foreach (var item in Model.ModulePermissionMapping.First().Permissions)
                            {
                                <th>
                                    @Html.DisplayFor(model => item.Name)
                                </th>
                            }
                        </tr>
                        @for (var i = 0; i < Model.ModulePermissionMapping.Count; i++)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(model => model.ModulePermissionMapping[i].Name)
                                </td>
                                @for (var j = 0; j < Model.ModulePermissionMapping[i].Permissions.Count; j++)
                                {
                                    <td>
                                        @Html.CheckBoxFor(model => Model.ModulePermissionMapping[i].Permissions[j].IsSelected, new { @class = "form-control", @disabled = "disabled" })
                                    </td>
                                }
                            </tr>
                        }
                    </table>
                </div>
                <p>
                    @Html.ActionLink("Back to Roles", "Index")
                </p>
            </div>
        </div>

        <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->
</div>
