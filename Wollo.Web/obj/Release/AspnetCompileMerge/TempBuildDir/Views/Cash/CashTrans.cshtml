@model IEnumerable<Wollo.Entities.ViewModels.Cash_Transaction_History>
@{
    ViewBag.Title = "Member Cash Transaction History";
}
<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Cash Transaction History
                </h1>
                <ol class="breadcrumb">
                    <li class="active">
                        <i class="fa fa-dashboard"></i> Dashboard / Cash Transaction History
                    </li>
                </ol>
            </div>
        </div>
        <div class="col-lg-12">
            <div id="upper-birth">

                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>

                            <tr>
                                <th>Date & Time</th>
                                <th>Currency</th>
                                @if (User.IsInRole("Super Admin 1") || User.IsInRole("Super Admin 2"))
                                {
                                    <th>Payee</th>
                                }
                                <th>Description</th>
                                <th>Opening Cash Balance</th>
                                <th>Transaction Amount</th>
                                <th>Closing Balance</th>
                                @*<th>Comment</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(x =>item.created_date)
                                        @*@{string date = item.created_date.HasValue ? item.created_date.Value.ToString("dd-MM-yyyy") : item.created_date.ToString();}
                                        @Html.DisplayFor(x => date)*@
                                    </td>
                                    <td>USD</td>
                                    @if (User.IsInRole("Super Admin 1") || User.IsInRole("Super Admin 2"))
                                    {
                                        <td>@Html.DisplayFor(x=>item.AspNetUsers.username)</td>
                                    }
                                    <td>@Html.DisplayFor(x => item.description)</td>
                                    <td>@Html.DisplayFor(x => item.opening_cash)</td>
                                    <td>@Html.DisplayFor(x => item.transaction_amount)</td>
                                    <td>@Html.DisplayFor(x => item.closing_cash)</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    @*<nav class="text-center">
                        <ul class="pagination">
                            <li class="disabled"><a href="#" aria-label="Previous"><span aria-hidden="true">&laquo;</span></a></li>
                            <li class="active"><a href="#">1 <span class="sr-only">(current)</span></a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">5</a></li>
                            <li>
                                <a href="#" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>*@
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->
</div>
<!-- /#wrapper -->
@section scripts{
    <script>
        $("#nav-cash").addClass("active");
    </script>
}