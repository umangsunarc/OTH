@*@model IEnumerable<Wollo.Web.Models.ApplicationUser>*@
@model IEnumerable<Wollo.Entities.Models.User>
@{
    ViewBag.Title = "Manage Users";
}
<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Manage Users
                </h1>
                <ol class="breadcrumb">
                    <li class="active">
                        <i class="fa fa-dashboard"></i> Manage Users
                    </li>
                </ol>
            </div>
        </div>
        <div class="container-fluid">

            <div class="col-lg-12 space">
                <table class="table table-bordered table-striped">
                    <tr>
                        <th class="no-b-th"> <div class="text-left">Users</div></th>
                        <th class="empty-th"> </th>
                        <th class="empty-th"> </th>
                        <th class="empty-th"> </th>
                        <th class="empty-th"> </th>
                        @if (User.IsInRole("Super Admin 1") || User.IsInRole("Super Admin 2"))
                        {
                            <th class="no-b-th text-right">
                                @*@Html.ActionLink("Create User", "CreateUser")*@
                                @*<button type="button" class="btn btn-primary" id="add">Add New User <i class="fa fa-plus-square" aria-hidden="true"></i></button>*@
                                <a href="User/CreateUser" class="btn btn-primary" id="add">Add New User <i class="fa fa-plus-square" aria-hidden="true"></i></a>
                            </th>
                        }
                        else
                        {
                            <th class="empty-th"> </th>
                        }
                    </tr>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(x => x.FirstOrDefault().user_name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(x => x.FirstOrDefault().first_name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(x => x.FirstOrDefault().last_name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(x => x.FirstOrDefault().email_address)
                        </th>
                        <th>
                           @Html.DisplayName("Status")
                        </th>
                        <th>Options</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(x => item.user_name)
                            </td>
                            <td>
                                @Html.DisplayFor(x => item.first_name)
                            </td>
                            <td>
                                @Html.DisplayFor(x => item.last_name)
                            </td>
                            <td>
                                @Html.DisplayFor(x => item.email_address)
                            </td>
                            <td>
                                @Html.DisplayFor(x=>item.MemberStatusMaster.status)
                            </td>
                            <td>
                                @*@Html.ActionLink("Edit", "Edit", new { id = item.user_id }) |*@
                                @Html.ActionLink("User Role", "Details", new { id = item.user_id }) |
                                @Html.ActionLink("Manage Roles", "Roles", new { id = item.user_id })
                            </td>
                        </tr>
                    }
                </table>

            </div>
        </div>

        <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->
</div>






