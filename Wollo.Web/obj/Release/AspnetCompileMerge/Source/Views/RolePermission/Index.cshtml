@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "Role Permissions";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Role Permissions
                </h1>
                <ol class="breadcrumb">
                    <li class="active">
                        <i class="fa fa-dashboard"></i> Role Permissions
                    </li>
                </ol>
            </div>
        </div>
        <div class="container-fluid">

            <div class="col-lg-12 space">

                <table class="table table-bordered table-striped">
                    <tr>
                        <th>@Html.DisplayNameFor(x => x.LastOrDefault().Name)</th>
                        <th>Options</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(x => item.Name)
                            </td>
                            <td>
                                @if (User.IsInRole("Super Admin 1") || User.IsInRole("Super Admin 2"))
                                {
                                    @Html.ActionLink("Edit Permissions", "EditPermission", new { Id = item.Id }) <span>|</span>
                                }
                                @Html.ActionLink("Details", "Details", new { Id = item.Id })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>

        <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->
</div>