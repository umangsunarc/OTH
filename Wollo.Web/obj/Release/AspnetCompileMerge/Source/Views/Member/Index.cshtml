                                     string holiday_date = item.holiday_date.ToString("MM/dd/yyyy");
                                            <li class="glyphicon glyphicon-ok-sign">
                                               <b> @Html.DisplayFor(model => item.description) on @holiday_date</b>
                                                <br />
                                            </li>
                                            
                            }
