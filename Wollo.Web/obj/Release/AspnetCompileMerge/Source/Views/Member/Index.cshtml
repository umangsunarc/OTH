                    </a>
                </div>
            </div>*@

        </div><br /><br />


        <!--Coed made by umang 20/07/1016-->

        <div class="row">
            <div class="col-md-12" style="background-color: TRANSPARENT; BORDER: 2PX SOLID WHITE; BORDER-RADIUS: 10PX; Color:dimgray; box-shadow: 1PX 1PX 6PX gray; ">
                <div class="col-sm-12 notifidiv ubid bid-loud blue">
                    <i class="fa fa-bell"></i> Notices and Maintainance
                </div>
                <div class="col-sm-12">

                    <ul class="wrpe-special" data-offcanvass="yes" style="text-transform:capitalize; line-height:2;">
                        @foreach (var item in Model.HolidayData.lstHolidayMaster)
