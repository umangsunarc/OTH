    <style>
        #languagemenudesign {
            background-color: transparent;
            //color: white;
            font-size: medium;
            font-weight: 600;
            padding-left: 8px;
            padding-right: 8px;
            border:0px;
            text-transform:capitalize;
        }
        .wrpe-nav-style-1 .wrpe-link-wrap ul, .wrpe-nav-style-2 .wrpe-link-wrap ul
        {
            width:initial;
        }
       
        #ddmenualert
        {
            border:1px;
            background-color:black;
            border-style:solid;
            
        }
        .dropdown-menu > li > a:focus, .dropdown-menu > li > a:hover
        {
            background-color:#038ce6;
        }
        #wrpe-offcanvass ul li {
            padding: 0;
            margin: 4px;
        }

        #wrpe-offcanvass.offcanvass-nav-style-1 .wrpe-special li a, #wrpe-offcanvass.offcanvass-nav-style-1 .wrpe-inline li a {
