@model Wollo.Web.Models.MarketRateModel

@{
    ViewBag.Title = @Html.DisplayNameFor(item => item.market_rate);
}

<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    @*@Html.Label("Admin Settings")*@<strong>@Html.LabelFor(item=>item.market_rate)</strong>
                </h1>
                <ol class="breadcrumb">
                    <li class="active">
                        <i class="fa fa-dashboard"></i> @*@Html.Label("Market Rate")*@<b>@Html.LabelFor(item => item.dashboard_market_rate)</b>
                    </li>
                </ol>
            </div>
        </div>
        @using (Html.BeginForm("SetMarketRate", "AdminSetting", FormMethod.Post))
        {
            <div class="container-fluid row">
                <div class="page-header">
                    <h2>@Html.LabelFor(item => item.market_rate)</h2>
                </div>
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="form-inline">
                            <div class="row">
                                <div class="col-md-2"><strong>@*@Html.LabelFor(x => x.rate)*@ @Html.LabelFor(item => item.initial_market_rate)  </strong></div>
                                <div class="input-group col-md-4">
                                    @Html.TextBoxFor(model => model.MarketRateDetails.rate, new { @class = "form-control input-small" })
                                    <p style="color:red;">@ViewBag.Message</p>
                                    @*<span class="input-group-addon"><i class="glyphicon glyphicon-time"></i></span>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel panel-default" style="height:66px;">
                    <div class="panel-body">
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary" value=@Html.DisplayNameFor(model => model.update) style="margin-top:-1px;" />
                            @*<button type="submit" class="btn btn-primary">@Html.LabelFor(x => x.update)</button>*@
                        </div>
                    </div>
                </div>
            </div>

        }
        <!-- /#page-wrapper -->
    </div>
</div>

@section scripts{
    <script src="~/js/jquery.js"></script>
    @*<script src="~/Scripts/bootstrap.js"></script>*@
    <script src="http://netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
    <script src="~/js/bootstrap-timepicker.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myGroup ul li a').click(function () {
                $('#myGroup ul li ul.collapse ').removeClass('in');
                $('#myGroup ul li').removeClass('active');
            });
        })
        $('.datetimepicker').timepicker();
    </script>

}
